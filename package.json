{
  "name": "minhaficha-gerenciador-impressao",
  "version": "1.0.2",
  "description": "Gerenciador de Impressão para Minha Ficha",
  "main": "src/main.js",
  "keywords": [],
  "author": "Centre Soluções em Tecnologia Ltda",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "node scripts/prepare-nsis.js && electron-builder --win --x64 --config.nsis.differentialPackage=false",
    "build:win-files": "electron-builder --win --x64 --dir",
    "postinstall": "node scripts/setup-nsis.js",
    "prepare-rebuild": "node scripts/force-kill.js && node scripts/prepare-nsis.js",
    "rebuild": "npm run prepare-rebuild && electron-builder --win --x64 --force",
    "test": "node start-test-mode.js"
  },
  "build": {
    "appId": "com.minhaficha.gerenciador-impressao",
    "productName": "Minha Ficha - Print Service",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "config.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": false,
      "uninstallDisplayName": "Minha Ficha - Print Service",
      "include": "build/installer.nsh",
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.4.4",
    "net": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.9.1"
  }
}
