{
  "name": "print-service",
  "version": "1.0.0",
  "description": "ZPL Print Service",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.4.4",
    "net": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.minhaficha.print-service",
    "productName": "Serviço de Impressão",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
