{
  "name": "mf-impressao",
  "version": "1.0.0",
  "description": "API Bridge para Impressoras Zebra com interface de gerenciamento.",
  "main": "frontend/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"nodemon backend/server.js\" \"electron .\"",
    "build": "electron-builder"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "pg-boss": "^10.1.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.seuapp.zebraapi",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
